<h2>Garages</h2>

<% if flash[:errors] %>
  <% flash[:errors].each do |message| %>
    <h4 style="color: red;"> Error: <%= message %> </h4>
  <% end %>
<% end %>

<ul>
  <% @garages.each do |garage| %>
    <li>
        <%= link_to "Garage No. #{garage.id}  ", garage_path(garage) %>
        <ul>
            Room Size: 
            <%= " #{garage.size} sqft" %>
            <br>
            Room Style: 
            <%= link_to " #{garage.room_style.style}", room_style_path(garage.room_style) %>
            Room Cost:
            <%= " #{garage.cost}" %>
            <br>
            Room Designer:
            <%= link_to " #{garage.user.name}", user_path(garage.user) %>
        </ul>
    </li>
    <br>
  <% end %>
</ul>
<br>
<br>
<%= link_to 'Create a garage', new_garage_path %>